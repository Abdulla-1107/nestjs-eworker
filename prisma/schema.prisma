generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  phone     String
  password  String
  inn       String?
  bank      String?
  mfo       String?
  salary    Float?
  account   String?
  address   String?
  role      UserRole @default(USER_FIZ)
  createdAt DateTime @default(now())
  regionId  String
  Region    Region   @relation(fields: [regionId], references: [id])
}

enum UserRole {
  ADMIN
  SUPER_ADMIN
  VIEWER_ADMIN
  USER_FIZ
  USER_YUR
}

model Region {
  id        String   @id @default(uuid())
  name_uz   String
  name_ru   String
  name_en   String
  createdAt DateTime @default(now())
  User      User[]
}
